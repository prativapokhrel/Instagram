.row

  .center-block
    %span <h1><b>Instagram</b></h1>

    - if user_signed_in?
      %li= link_to current_user.email, user_session_path(current_user)
      %li= link_to "Edit Profile", edit_user_registration_path
      %li= link_to "Logout", destroy_user_session_path, method: :delete

    - else
      = link_to "Log in", new_user_session_path
      = link_to "Sign up", new_user_registration_path
    / %li= link_to "Sign in using facebook", user_facebook_omniauth_authorize_path
